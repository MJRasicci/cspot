            "installDir": "${sourceDir}/artifacts/install/${presetName}",
            "cacheVariables": {
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/artifacts/bin/${presetName}",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/artifacts/lib/${presetName}",
