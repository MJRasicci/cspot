                "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
                "ANDROID_PLATFORM": "android-26",
                "CSPOT_BUILD_NATIVE_SAMPLES": "OFF",
                "CSPOT_CARGO_NO_DEFAULT_FEATURES": "ON",
                "CSPOT_CARGO_FEATURES": "rodio-backend,with-libmdns,rustls-tls-webpki-roots",
                "CPACK_PACKAGE_FILE_NAME": "cspot-${presetName}"
            }
